    "transitions": {
      "fast": {
        "value": "150ms ease",
        "usage": "Small UI elements, icons, color changes"
      },
      "default": {
        "value": "300ms ease",
        "usage": "Most interactions, buttons, cards"
      },
      "slow": {
        "value": "500ms ease",
        "usage": "Large elements, page transitions, accordions"
      },
      "spring": {
        "value": "300ms cubic-bezier(0.34, 1.56, 0.64, 1)",
        "usage": "Playful interactions, bouncy effects"
      }
    },

    "animations": {
      "fadeInUp": {
        "keyframes": {
          "from": {
            "opacity": 0,
            "transform": "translateY(20px)"
          },
          "to": {
            "opacity": 1,
            "transform": "translateY(0)"
          }
        },
        "duration": "600ms",
        "easing": "ease-out",
        "usage": "Section content reveal on scroll"
      },
      "fadeIn": {
        "keyframes": {
          "from": { "opacity": 0 },
          "to": { "opacity": 1 }
        },
        "duration": "400ms",
        "easing": "ease",
        "usage": "Simple fade reveals"
      },
      "scaleIn": {
        "keyframes": {
          "from": {
            "opacity": 0,
            "transform": "scale(0.95)"
          },
          "to": {
            "opacity": 1,
            "transform": "scale(1)"
          }
        },
        "duration": "300ms",
        "easing": "ease-out",
        "usage": "Modal, card appearances"
      },
      "slideInRight": {
        "keyframes": {
          "from": {
            "opacity": 0,
            "transform": "translateX(20px)"
          },
          "to": {
            "opacity": 1,
            "transform": "translateX(0)"
          }
        },
        "duration": "400ms",
        "easing": "ease-out",
        "usage": "Staggered card animations"
      }
    },

